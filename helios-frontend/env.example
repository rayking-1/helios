# Helios前端环境变量示例
# 复制此文件为.env.local并根据环境填写相应值

# API基础URL
VITE_API_BASE_URL=http://localhost:8000/api

# WebSocket连接URL
VITE_API_WS_URL=ws://localhost:8000/ws

# 部署模式: development, production
VITE_MODE=development

# 认证相关
VITE_AUTH_ENABLED=false

# UI配置
VITE_APP_NAME=Helios自适应规划系统
VITE_PRIMARY_COLOR=#1976d2

# 智能体配置
VITE_SHOW_AGENT_THINKING=true
VITE_MAX_AGENT_MESSAGES=100

# 分析和监控
VITE_ANALYTICS_ENABLED=false
VITE_ANALYTICS_ID=your-analytics-id

# 不同环境的典型配置

# 开发环境
# VITE_API_BASE_URL=http://localhost:8000/api
# VITE_API_WS_URL=ws://localhost:8000/ws
# VITE_MODE=development
# VITE_SHOW_AGENT_THINKING=true

# 测试环境
# VITE_API_BASE_URL=https://staging-api.yourdomain.com/api
# VITE_API_WS_URL=wss://staging-api.yourdomain.com/ws
# VITE_MODE=production
# VITE_SHOW_AGENT_THINKING=true

# 生产环境
# VITE_API_BASE_URL=https://api.yourdomain.com/api
# VITE_API_WS_URL=wss://api.yourdomain.com/ws
# VITE_MODE=production
# VITE_SHOW_AGENT_THINKING=false
# VITE_ANALYTICS_ENABLED=true 